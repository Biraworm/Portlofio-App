generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  isAdmin    Boolean   @default(false)
  createdAt  DateTime  @default(now())
  assets     Asset[]
  transactions Transaction[]
  dividends  Dividend[]

  @@index([id])
}

model Asset {
  id         String   @id @default(uuid())
  ticker     String
  name       String
  type       String   // e.g. "STOCK","FII","CRYPTO","ETF","REIT"
  currency   String   // USD, BRL, CAD...
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  dividends  Dividend[]
  prices     Price[]

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
}

model Transaction {
  id         String   @id @default(uuid())
  date       DateTime
  type       String   // BUY / SELL
  price      Float
  quantity   Float
  fees       Float    @default(0)
  assetId    String
  asset      Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([assetId])
  @@index([date])
}

model Dividend {
  id         String   @id @default(uuid())
  date       DateTime
  amount     Float
  assetId    String
  asset      Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([assetId])
  @@index([date])
}

model Price {
  id         String   @id @default(uuid())
  date       DateTime
  close      Float
  assetId    String
  asset      Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([assetId, date])
  @@index([assetId])
  @@index([date])
}
